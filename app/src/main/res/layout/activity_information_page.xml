<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bmi_backgroud"
        android:orientation="vertical"
        tools:context=".InformationPage">

        <TextView
            android:layout_width="240dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="15dp"
            android:text="@string/limitations_top"
            android:textAlignment="center"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/define"
            android:layout_width="220dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="100dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp">

            <Button
                android:id="@+id/underweight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/light_green"
                android:text="@string/underweight_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/normal_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:backgroundTint="@color/light_green"
                android:text="@string/normal_weight_text"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/overweight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:backgroundTint="@color/light_green"
                android:text="@string/overweight_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/obese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:backgroundTint="@color/light_green"
                android:text="@string/obese_text"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btnlimitatio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/red"
            android:text="@string/bmi_limitation" />
    </LinearLayout>
</layout>
